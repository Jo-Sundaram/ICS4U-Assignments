		// TODO Auto-generated method stub
		Scanner keyboard = new Scanner(System.in);
		String name;
		String streetName;
		int age = 0;
		
		IO.createOutputFile("file03.txt");
		// Asking and storing informations
		System.out.println("Enter your name, street name and age :");
//		name = keyboard.nextLine();
//		streetName = keyboard.nextLine();
//		age = keyboard.nextInt();
		
		String person = keyboard.nextLine();
		String [] people = person.split(", ");
		
		for (int i = 0; i<3; i++) {
		
			IO.println(people[i]);
	
		}
		
		IO.closeOutputFile();
		

		IO.openInputFile("file03.txt");
		String lines = IO.readLine();
		int numLines = 0;
		
		while (lines != null) {
			System.out.println(lines);
			numLines ++;
			lines = IO.readLine();
		}
		
		
		
		
		
		
	}
		

